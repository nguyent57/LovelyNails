<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingPage">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/BookingHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:text="Today date"/>

        <EditText
            android:id="@+id/date"
            android:layout_below="@id/BookingHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint= " Tap on me to select your date!"
            android:textStyle="bold|italic"
            android:paddingLeft="0dp"/>
        <EditText
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint= "Tap on me to select your time of visit!"
            android:layout_below="@id/date"
            android:textStyle="bold|italic"
            android:focusable="false"
            android:textAllCaps="false"
            />

        <EditText
            android:id="@+id/services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:hint="Tap on me to select your service today!"
            android:layout_below="@id/time"
            android:layout_marginLeft="0dp"/>

        <Button
            android:id="@+id/StoreInfo"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@id/services"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/about_store_btn"
            />
        <TextView
            android:id="@+id/infoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/StoreInfo"
            android:layout_centerHorizontal="true"
            android:text="Please select Store Info for more information"/>

        <Button
            android:id="@+id/Medicure"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@id/infoText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/medicure_btn"
            />
        <TextView
            android:id="@+id/MedicureText"
            android:text="Please select Medicure for more options"
            android:layout_below="@id/Medicure"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/Pedicure"
            android:layout_below="@id/MedicureText"
            android:layout_centerHorizontal="true"
            android:background="@drawable/pedicure_btn"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/PedicureText"
            android:text="Please select Pedicure for more options"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/Pedicure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/Book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="I'm ready to book my visit!"
            android:textAllCaps="false"
            android:background="#ff00"
            android:textColor="#FFF"
            android:textStyle="italic" />
    </RelativeLayout>

</LinearLayout>