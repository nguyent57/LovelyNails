<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout tools:context=".ProfileActivity"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <android.support.v7.widget.Toolbar
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#FF9092"
            android:id="@+id/toolbar"/>

        <TextView android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textAlignment="center"
            android:text="Tap on camera to choose profile picture"/>


        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

        <ImageView
            android:layout_height="170dp"
            android:layout_width="170dp"
            android:background="@drawable/icon_camera"
            android:id="@+id/imageView"
            android:scaleType="centerCrop"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"/>

        <ProgressBar
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/progressbar"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_centerVertical="true"/>

</RelativeLayout>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/editTextDisplayName"
            android:textColor="#ff00"
            android:hint="Enter Display Name"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/textViewVerified"
            android:textColor="#FF00"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:text="Verified"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/rounded_button_transparent"
            android:id="@+id/buttonSave"
            android:text="Countinue"
            android:textColor="#ff00"
            android:textAllCaps="false"
            android:paddingRight="55dp"
            android:paddingLeft="55dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"/>

</LinearLayout>